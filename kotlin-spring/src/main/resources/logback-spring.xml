<configuration>
  <include resource="included-console.xml"/>
  <include resource="included-elk.xml"/>

  <springProfile name="local,test">
    <logger level="DEBUG" name="com.github.anddd7"/>
    <logger level="DEBUG" name="org.springframework.web.filter.CommonsRequestLoggingFilter"/>

    <logger level="INFO" name="org.hibernate.SQL"/>
    <logger level="INFO" name="org.hibernate.type.descriptor.sql.BasicBinder"/>

    <root level="INFO">
      <appender-ref ref="STDOUT"/>
    </root>
  </springProfile>

  <springProfile name="dev">
    <root level="INFO">
      <appender-ref ref="ELK"/>
    </root>
  </springProfile>
</configuration>
