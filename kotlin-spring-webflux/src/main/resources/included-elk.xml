<included>
  <appender name="ELK" class="ch.qos.logback.core.ConsoleAppender">
    <encoder class="net.logstash.logback.encoder.LoggingEventCompositeJsonEncoder">
      <providers>
        <mdc>
          <includeMdcKeyName>correlation.id</includeMdcKeyName>
        </mdc>
        <pattern>
          <pattern>
            {
            "tags": ["backend-skeleton","spring","kotlin"],
            "project": "kotlin-spring",
            "mdc": "%mdc",
            "timestamp": "%date{\"yyyy-MM-dd'T'HH:mm:ss,SSSZ\"}",
            "log_level": "%level",
            "thread": "%thread",
            "logger_name": "%logger",
            "message": "%message",
            "stack_trace": "%xException"
            }
          </pattern>
        </pattern>
      </providers>
    </encoder>
  </appender>
</included>
